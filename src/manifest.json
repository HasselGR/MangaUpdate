{
  "name": "Manga Update",
  "version": "0.0.0",
  "manifest_version": 2,
  "description": "Check out if your manga has been updated!",
  "author": "David Gamboa",
  "permissions": ["alarms", "declarativeContent", "activeTab", "<all_urls>", "storage", "notifications"],
  "homepage_url": "https://github.com/HasselGR/manga-update",
  "icons": {
    "128": "images/icon.png"
  },
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "chrome_style": true,
    "page": "options.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
